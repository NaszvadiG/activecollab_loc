{if $refresh_task_content_mode}	{if $active_task->hasAssignees(true) && $active_task->getDueOn()}		<span class="details block">{object_assignees object=$active_task} | {due object=$active_task}</span>	{elseif $active_task->hasAssignees(true)}		<span class="details block">{object_assignees object=$active_task}</span>	{elseif $active_task->getDueOn()}		<span class="details block">{due object=$active_task}</span>	{/if}	{reminder object=$active_task}	<span class="option">		{$active_task->get_auto_email_value()}	</span>{else}	<form id="formQuickReminder">		<div class="form_full_view">			<div class="col" style="width:100%;">				{wrap field=due_on}					{label for=taskDueOn}Due on{/label}					{select_date name='taskquick[due_on]' value=$task_data.due_on id=taskDueOnQuick}				{/wrap}			</div>			<br/><br/><br/>	  			<div class="col" style="width:100%;">				{wrap field=reminder}					{label for=taskreminder}Reminder{/label}					{select_date name='taskquick[reminder]' value=$task_data.reminder id=taskReminderQuick onchange="setHour()"}					<nobr>						<select name="taskquick[reminderhours]" style="width:50px;">							<option value=""></option>							{section name=hour start=1 loop=13}							<option value="{$smarty.section.hour.index}" {if $smarty.section.hour.index==$task_data.reminderhours}selected{/if}>{$smarty.section.hour.index}</option>							{/section}						</select>						:						<input type="hidden" name="taskquick[reminderminutes]" value="0"/>00						<select name="taskquick[remindermeridian]" style="width:50px;">							<option value="AM" {if 'AM'==$task_data.remindermeridian}selected{/if}>AM</option>							<option value="PM" {if 'PM'==$task_data.remindermeridian}selected{/if}>PM</option>						</select>					</nobr>				{/wrap}			</div>			<br/><br/>			<div class="col">				{wrap field=email}					{label for=taskemail}Email{/label}					<input type="checkbox" name="taskquick[email_flag]" {if $task_data.auto_email_status=='1'}checked{/if} value="1" style="width:20px;" /> Yes				{/wrap}			</div>			<br/><br/>			<div class="col" style="width:100%;">				{wrap field=assignees}					{label for=taskAssignees}Assignees{/label}					{select_assignees_inline name='taskquick[assignees]' id="assigneesQuick" value=$task_data.assignees object=$active_task project=$active_project choose_responsible=true show_only_names=true}					<div class="clear"></div>				{/wrap}			</div>			<div class="col" style="text-align:center;width:100%;">				<br/><br/>					{*}<input type="button" id="btnSave" value="Save" style="width:50px;" />{*}					<img id="indicator" src="" style="visibility:hidden;" />					<button type="button" id="btnQuickReminderSave"><span><span>Save</span></span></button>										<button type="button" id="btnQuickReminderClose"><span><span>Close</span></span></button>			</div>			<div class="clear"></div>		</div>		<input type="hidden" name="project_id" value="{$active_project->getId()}" />		<input type="hidden" name="task_id" value="{$active_task->getId()}" />	</form>	<script type="text/javascript"> App.QuickReminder.init(); </script>{/if}